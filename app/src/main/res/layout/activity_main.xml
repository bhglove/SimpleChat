<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bhglove.cpsc482.edu.simplechat.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_welcome"
        android:gravity="center"
        android:textSize="45sp"
        android:layout_alignParentStart="true"
        android:id="@+id/main_welcome"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_welcome"
        android:text="@string/main_description"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:id="@+id/main_description"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_description"
        android:text="@string/main_login_button"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:padding="10dp"
        android:onClick="onSignOn"
        />
</RelativeLayout>
